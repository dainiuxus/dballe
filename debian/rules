#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk

# Work around to latex2html bug #368693
export RGBDEF=/usr/share/latex2html/styles/rgb.txt

#DEB_MAKE_CHECK_TARGET := check
#DEB_CONFIGURE_EXTRA_FLAGS += --disable-shared --with-pic

# Store build information
common-binary-post-install-arch common-binary-post-install-indep::
	dh_buildinfo

install/libdballe-core-doc::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen core

install/libdballe-bufrex-doc::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen bufrex

install/libdballe-msg-doc::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen msg

install/libdballe-db-doc::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen db

install/libdballe-doc::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen dox_html $(cdbs_curpkg)
