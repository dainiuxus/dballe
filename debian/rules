#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk

# Work around to latex2html bug #368693
export RGBDEF=/usr/share/latex2html/styles/rgb.txt

#DEB_MAKE_CHECK_TARGET := check
#DEB_CONFIGURE_EXTRA_FLAGS += --disable-shared --with-pic

# Store build information
common-binary-post-install-arch common-binary-post-install-indep::
	dh_buildinfo

install/libdballe-core-dev::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen coredox_html $(cdbs_curpkg)

install/libdballe-bufrex-dev::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen bufrexdox_html $(cdbs_curpkg)

install/libdballe-msg-dev::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen msgdox_html $(cdbs_curpkg)

install/libdballe-db-dev::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen dbdox_html $(cdbs_curpkg)

install/libdballe-dev::
	chmod 0755 debian/install-doxygen
	debian/install-doxygen dox_html $(cdbs_curpkg)
